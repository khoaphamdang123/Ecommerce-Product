                <nav>
                    <ul>
                        @* Previous Button *@
                     @if(Model.currentPage==1)
                     {
                        <li class="disabled">
                            <a href="#">
                                <i class="fal fa-angle-double-left"></i>
                            </a>
                        </li>
                     }
                        @if (Model.currentPage > 1)
                        {
                            <li>
                                <a href="@Url.Action("ProductsPaging", new {page_size=Model.pageSize, page = Model.currentPage-1,products=Model.item })">
                                    <i class="fal fa-angle-double-left"></i>
                                </a>
                            </li>
                        }

                        @if (Model.totalPage > 6 && Model.currentPage > 4)
                        {
                            <li><a href="@Url.Action("ProductsPaging", new {page_size=Model.pageSize, page = 1,products=Model.item })">1</a></li>
                            <li><span>...</span></li>
                        }

                        @{
                            int startPage = Math.Max(1, Model.currentPage - 2);
                            
                            int endPage = Math.Min(Model.totalPage, Model.currentPage + 2);

                            if (Model.currentPage <= 3)
                            {
                                endPage = Math.Min(5, Model.totalPage);
                            }
                            else if (Model.currentPage >= Model.totalPage - 2)
                            {
                                startPage = Math.Max(Model.totalPage - 4, 1);
                            }

                            for (int i = startPage; i <= endPage; i++)
                            {
                                <li>
                                    <a href="@Url.Action("ProductsPaging", new {page_size=Model.pageSize, page = i,products=Model.item })" class="@(Model.currentPage== i ? "active" : "")">
                                        @i
                                    </a>
                                </li>
                            }
                        }

                        @if (Model.totalPage > 6 && Model.currentPage< Model.totalPage - 3)
                        {
                            <li><span>...</span></li>
                            <li><a href="@Url.Action("ProductsPaging", new {page_size=Model.pageSize, page = Model.totalPage,products=Model.item })">@Model.totalPage</a></li>
                        }

                        @* Next Button *@
                        @if (Model.currentPage < Model.totalPage)
                        {
                            <li>
                                <a href="@Url.Action("ProductsPaging", new {page_size=Model.pageSize, page = Model.currentPage+1,products=Model.item })">
                                    <i class="fal fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                        @if (Model.currentPage == Model.totalPage)
                        {
                            <li class="disabled">
                                <a href="@Url.Action("ProductsPaging", new {page_size=Model.pageSize, page = Model.currentPage,products=Model.item })">
                                    <i class="fal fa-angle-double-right"></i>
                                </a>
                            </li>
